<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.LegsFragment">
    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/legsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="108dp"
        android:gravity="center_horizontal"
        android:text="LEGS WEIGHTS"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Squat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="220dp"
        android:text="Squat:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Squat_Weight"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="165dp"
        android:ems="5"
        android:inputType="number"
        android:text="@string/saved_dlKg"
        app:layout_constraintStart_toEndOf="@+id/Squat"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/RDL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="220dp"
        android:text="RDL:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Squat" />

    <EditText
        android:id="@+id/rdl_Weight"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="4dp"
        android:ems="5"
        android:inputType="number"
        android:text="@string/bbrKg"
        app:layout_constraintStart_toEndOf="@+id/RDL"
        app:layout_constraintTop_toBottomOf="@+id/Squat_Weight" />

    <TextView
        android:id="@+id/LegPress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="220dp"
        android:text="LegPress:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RDL" />

    <TextView
        android:id="@+id/Hamcurl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="220dp"
        android:text="Hamcurl:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LegPress" />


    <EditText
        android:id="@+id/LegP_weight"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="4dp"
        android:ems="5"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/LegPress"
        app:layout_constraintTop_toBottomOf="@+id/rdl_Weight" />

    <EditText
        android:id="@+id/Hamcurl_weight"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/Hamcurl"
        app:layout_constraintTop_toBottomOf="@+id/LegP_weight" />

    <EditText
        android:id="@+id/calves_weight"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/Calves"
        app:layout_constraintTop_toBottomOf="@+id/Hamcurl_weight" />

    <TextView
        android:id="@+id/Calves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="220dp"
        android:text="Calves:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Hamcurl" />


</androidx.constraintlayout.widget.ConstraintLayout>